generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String    @id @default(uuid())
  clerkId            String    @unique
  name               String
  email              String    @unique
  
  // Profile
  username           String?   @unique
  bio                String?
  website            String?
  avatar             String?
  isProfileLive      Boolean   @default(false)
  
  // Settings
  pipelinePresets    Json?     
  terms              String?   
  
  // PAYMENT SETTINGS
  defaultPaymentLink String?   
  paymentInstructions String?
  paymentMethods      Json?   

  // Relations
  contacts           Contact[]
  companies          Company[]
  products           Product[]
  Task               Task[]
  deals              Deal[]
  notes              Note[]
  meetings           Meeting[]
  expenses           Expense[]
  invoices           Invoice[]
  
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @default(now()) @updatedAt
  googleAccessToken  String?
  googleRefreshToken String?
}

model Company {
  id        String    @id @default(uuid())
  name      String
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  contacts  Contact[]
  deals     Deal[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  website   String?
  logo      String?
  domain    String?
}

model Contact {
  id              String    @id @default(uuid())
  name            String
  email           String?
  phone           String?
  jobTitle        String?
  companyName     String?
  linkedin        String?
  location        String?
  imageUrl        String?
  lastContactedAt DateTime?
  userId          String
  user            User      @relation(fields: [userId], references: [id])
  companyId       String?
  company         Company?  @relation(fields: [companyId], references: [id])
  tags            Tag[]     @relation("ContactTags")
  deals           Deal[]    @relation("ContactDeals")
  tasks           Task[]    @relation("_ContactToTask")
  notes           Note[]
  meetings        Meeting[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  unitPrice   Float
  sku         String?
  isPublic    Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  lineItems   DealLineItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DealLineItem {
  id          String   @id @default(uuid())
  quantity    Int      @default(1)
  price       Float
  name        String
  description String?  // Added description to schema
  dealId      String
  deal        Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  productId   String?
  product     Product? @relation(fields: [productId], references: [id])
}

model Deal {
  id            String        @id @default(uuid())
  title         String
  amount        Float
  status        DealStatus    @default(OPEN)
  stage         String        @default("Lead")
  probability   Int           @default(20)
  roadmap       Json?         
  
  depositAmount Float?        @default(0)
  signature     String?       
  signedAt      DateTime?
  

    // PAYMENT OVERRIDES (Specific to this deal)
  paymentLink         String?       
  paymentInstructions String?  // <--- ADDED: Fixes "Unknown argument" error
  paymentMethods      Json?    // <--- ADDED: Fixes "Unknown argument" error


  userId        String
  user          User          @relation(fields: [userId], references: [id])
  contacts      Contact[]     @relation("ContactDeals")
  lineItems     DealLineItem[]
  invoices      Invoice[]
  tags          Tag[]         @relation("TagDeals")
  tasks         Task[]
  notes         Note[]
  meetings      Meeting[]
  expenses      Expense[]
  
  closeDate     DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now()) @updatedAt
  paymentTerms  String?       @default("Net 30")
  shareToken    String?       @unique @default(uuid())
  portalViews   Int           @default(0)
  companyId     String?
  company       Company?      @relation(fields: [companyId], references: [id])
}

model Invoice {
  id          String        @id @default(uuid())
  number      String
  status      InvoiceStatus @default(DRAFT)
  issueDate   DateTime      @default(now())
  dueDate     DateTime
  amount      Float
  dealId      String
  deal        Deal          @relation(fields: [dealId], references: [id], onDelete: Cascade)
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  items       Json
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  paymentLink         String?
  paidAt              DateTime?
}

model Note {
  id        String   @id @default(uuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id], onDelete: Cascade)
  dealId    String?
  deal      Deal?    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Tag {
  id        String    @id @default(uuid())
  name      String    @unique
  contacts  Contact[] @relation("ContactTags")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deals     Deal[]    @relation("TagDeals")
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  priority    Int        @default(1)
  startDate   DateTime?
  dueDate     DateTime?
  status      TaskStatus @default(TO_DO)
  stage       String?    
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  contacts    Contact[]  @relation("_ContactToTask")
  dealId      String?
  deal        Deal?      @relation(fields: [dealId], references: [id], onDelete: Cascade)
  notes       Note[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  isPublic    Boolean    @default(false)
}

model Meeting {
  id          String   @id @default(uuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  contactId   String?
  contact     Contact? @relation(fields: [contactId], references: [id])
  dealId      String?
  deal        Deal?    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Expense {
  id          String   @id @default(uuid())
  description String
  amount      Float
  category    String   @default("OTHER")
  date        DateTime @default(now())
  dealId      String?
  deal        Deal?    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum TaskStatus {
  TO_DO
  IN_PROGRESS
  DONE
  CANCELLED
}

enum DealStatus {
  OPEN
  WON
  LOST
  ARCHIVED
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  LOST
  CONVERTED
  HOT
  COLD
}

enum InvoiceStatus {
  NONE
  DRAFT
  SENT
  PAID
  OVERDUE
}