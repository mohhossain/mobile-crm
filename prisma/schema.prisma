generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or sqlite/mysql
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  clerkId            String    @unique
  name               String
  email              String    @unique
  googleAccessToken  String?
  googleRefreshToken String?
  
  // NEW: Public Profile Fields (Ensure these exist!)
  username           String?   @unique
  bio                String?
  website            String?
  avatar             String?
  isProfileLive      Boolean   @default(false)
  
  gigs               Gig[]
  contacts           Contact[]
  companies          Company[]
  products           Product[]
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @default(now()) @updatedAt
  Task               Task[]
  deals              Deal[]
  services           Service[]
  notes              Note[]
  meetings           Meeting[]
  expenses           Expense[]
}

model Gig {
  id          String    @id @default(uuid())
  name        String
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  contacts    Contact[] @relation("GigContacts")
  deals       Deal[]
  createdAt   DateTime  @default(now())
  Task        Task[]
  updatedAt   DateTime  @updatedAt
  description String?
  services    Service[] @relation("GigServices")
}

model Company {
  id        String    @id @default(uuid())
  name      String
  website   String?
  logo      String?
  domain    String?
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  contacts  Contact[]
  deals     Deal[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Contact {
  id              String    @id @default(uuid())
  name            String
  email           String?
  phone           String?
  jobTitle        String?
  companyName     String?
  linkedin        String?
  location        String?
  imageUrl        String?
  lastContactedAt DateTime?
  userId          String
  user            User      @relation(fields: [userId], references: [id])
  companyId       String?
  company         Company?  @relation(fields: [companyId], references: [id])
  tags            Tag[]     @relation("ContactTags")
  deals           Deal[]    @relation("ContactDeals")
  tasks           Task[]    @relation("_ContactToTask")
  notes           Note[]
  meetings        Meeting[]
  gigs            Gig[]     @relation("GigContacts")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  unitPrice   Float
  sku         String?
  isPublic    Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  lineItems   DealLineItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DealLineItem {
  id          String   @id @default(uuid())
  quantity    Int      @default(1)
  price       Float
  name        String
  dealId      String
  deal        Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  productId   String?
  product     Product? @relation(fields: [productId], references: [id])
}

model Deal {
  id            String        @id @default(uuid())
  title         String
  amount        Float
  status        DealStatus
  probability   Int           @default(50)
  invoiceStatus InvoiceStatus @default(NONE)
  paymentTerms  String?       @default("Net 30")
  shareToken    String?       @unique @default(uuid())
  portalViews   Int           @default(0)
  gigId         String?
  gig           Gig?          @relation(fields: [gigId], references: [id])
  userId        String
  user          User          @relation(fields: [userId], references: [id])
  contacts      Contact[]     @relation("ContactDeals")
  companyId     String?
  company       Company?      @relation(fields: [companyId], references: [id])
  lineItems     DealLineItem[]
  tags          Tag[]         @relation("TagDeals")
  tasks         Task[]
  notes         Note[]
  meetings      Meeting[]
  expenses      Expense[]
  closeDate     DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now()) @updatedAt
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  gigs        Gig[]    @relation("GigServices")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

model Note {
  id        String   @id @default(uuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id], onDelete: Cascade)
  dealId    String?
  deal      Deal?    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Tag {
  id        String    @id @default(uuid())
  name      String    @unique
  contacts  Contact[] @relation("ContactTags")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deals     Deal[]    @relation("TagDeals")
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  priority    Int        @default(1)
  startDate   DateTime?
  dueDate     DateTime?
  status      TaskStatus @default(TO_DO)
  isPublic    Boolean    @default(false)
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  contacts    Contact[]  @relation("_ContactToTask")
  gigId       String?
  gig         Gig?       @relation(fields: [gigId], references: [id])
  dealId      String?
  deal        Deal?      @relation(fields: [dealId], references: [id], onDelete: Cascade)
  notes       Note[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Meeting {
  id          String   @id @default(uuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  contactId   String?
  contact     Contact? @relation(fields: [contactId], references: [id])
  dealId      String?
  deal        Deal?    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Expense {
  id          String   @id @default(uuid())
  description String
  amount      Float
  category    String   @default("OTHER")
  date        DateTime @default(now())
  dealId      String?
  deal        Deal?    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum TaskStatus {
  TO_DO
  IN_PROGRESS
  DONE
  CANCELLED
}

enum DealStatus {
  PENDING
  WON
  LOST
  CANCELLED
  NEGOTIATION
  OPEN
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  LOST
  CONVERTED
  HOT
  COLD
}

enum InvoiceStatus {
  NONE
  DRAFT
  SENT
  PAID
  OVERDUE
}