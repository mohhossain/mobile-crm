{
  "appId": "com.pulse.crm",
  "appName": "Pulse",
  "webDir": "out",
  "server": {
    "url": "https://pulsesmartcrm.vercel.app",
    "cleartext": true,
    "allowNavigation": [
      "pulsesmartcrm.vercel.app",
      "*.clerk.accounts.dev", 
      "*.clerk.com"
    ]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 0,
      "launchAutoHide": false, 
      "backgroundColor": "#ffffff", 
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": true
    }
  }
}